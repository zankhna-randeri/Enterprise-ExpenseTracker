<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTitleTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_24</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeaderTextTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="SubHeaderTextTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_xsmall</item>
    </style>

    <style name="TextDetailTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="ListDateTextTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_medium</item>
    </style>

    <style name="ListTextDetailTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_small</item>
    </style>

    <style name="ListAmountDetailTheme" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="EditTextDetailTheme" parent="android:Widget.EditText">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="TextInputTheme" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout</item>
        <item name="boxStrokeColor">@drawable/focus_tint_list</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/font_xsmall</item>
    </style>

    <style name="ButtonTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/padding_12</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_22</item>
    </style>

    <style name="SmallButtonTheme" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:padding">@dimen/padding_12</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimaryLight</item>
        <item name="android:fontFamily">@font/app_font</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/font_20</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/app_font</item>
    </style>
</resources>
